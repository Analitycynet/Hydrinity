+package xyz.nkomarn.hydrinity.util;
+
+import java.util.Random;
+import java.util.SplittableRandom;
+
+/**
+ * An adapter for {@link SplittableRandom} that extends {@link Random},
+ * allowing SplittableRandom to be used as a drop-in replacement for
+ * world random instances.
+ * <p>
+ * SplittableRandom is considerably more efficient than a standard Random,
+ * making world random performance roughly twice as fast. The downside of
+ * using this implementation is the lack of a setSeed() method.
+ */
+public class FastRandom extends Random {
+
+    private final SplittableRandom random;
+
+    public FastRandom() {
+        this.random = new SplittableRandom();
+    }
+
+    @Override
+    public boolean nextBoolean() {
+        return random.nextBoolean();
+    }
+
+    @Override
+    public int nextInt() {
+        return random.nextInt();
+    }
+
+    @Override
+    public float nextFloat() {
+        return (float) random.nextDouble();
+    }
+
+    @Override
+    public double nextDouble() {
+        return random.nextDouble();
+    }
+}
